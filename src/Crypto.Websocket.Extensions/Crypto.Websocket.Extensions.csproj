<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <PackageId>Crypto.Websocket.Extensions</PackageId>
    <Version>2.3.0</Version>
    <Authors>Mariusz Kotas</Authors>
    <Description>Extensions to cryptocurrency websocket clients</Description>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageReleaseNotes>Initial release</PackageReleaseNotes>
    <Copyright>Copyright 2019 Mariusz Kotas. All rights reserved.</Copyright>
    <PackageTags>Crypto websockets websocket client cryptocurrency exchange bitcoin extensions</PackageTags>
    <PackageLicenseUrl>https://github.com/Marfusios/crypto-websocket-extensions/blob/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/Marfusios/crypto-websocket-extensions</PackageProjectUrl>
    <PackageIconUrl>https://raw.githubusercontent.com/Marfusios/crypto-websocket-extensions/master/bitcoin.png</PackageIconUrl>
    <RepositoryUrl>https://github.com/Marfusios/crypto-websocket-extensions</RepositoryUrl>
    <RepositoryType>Git</RepositoryType>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <GenerateDocumentationFile>true</GenerateDocumentationFile> 
    <AssemblyVersion>2.3.0.0</AssemblyVersion>
    <FileVersion>2.3.0.0</FileVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Binance.Client.Websocket" Version="2.0.14" />
    <PackageReference Include="Bitfinex.Client.Websocket" Version="4.0.101" />
    <PackageReference Include="Bitmex.Client.Websocket" Version="3.1.73" />
    <PackageReference Include="Coinbase.Client.Websocket" Version="2.0.12" />
    <PackageReference Include="LibLog" Version="5.0.8">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\..\Crypto.Arbitrage\bitstamp-client-websocket\src\Bitstamp.Client.Websocket\Bitstamp.Client.Websocket.csproj" />
    <ProjectReference Include="..\..\..\..\Crypto.Arbitrage\coinbasePro-client-websocket\src\CoinbasePro.Client.Websocket\CoinbasePro.Client.Websocket.csproj" />
    <ProjectReference Include="..\Crypto.Websocket.Extensions.Core\Crypto.Websocket.Extensions.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="Crypto.Websocket.Extensions.Core, Version=2.0.0.0, Culture=neutral, PublicKeyToken=null">
      <HintPath>..\..\..\..\Crypto.Arbitrage\crypto-websocket-extensions\src\Crypto.Websocket.Extensions.Core\bin\Debug\netstandard2.0\Crypto.Websocket.Extensions.Core.dll</HintPath>
    </Reference>
  </ItemGroup>
</Project>
